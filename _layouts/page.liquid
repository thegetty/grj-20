---
classes:
  - quire-page
layout: base.11ty.js
description: Single page default template
---

{% pageHeader
  byline_format=byline_format,
  image=image,
  label=label,
  pageContributors=pageContributors,
  subtitle=subtitle,
  title=title
%}
{% if content %}
{% include 'page-tools' %}
<section class="section quire-page__content">
  <div class="container">
    <div class="content">
      {% if copyright %}
      <section class="quire-page__content page-tools__copyright" data-outputs-exclude="html">
      {{ copyright | markdownify }}
      </section>
      {% endif %}
      {{ content }}
      {% bibliography citations %}
    </div>
  </div>
</section>
{% endif %}
<section class="section quire-page__content">
  <div class="container">
    {% pageButtons pagination=pagination %}
  </div>
</section>
